
<div class="overlay">
  <h1>Scientists</h1>
</div>

<div class="overlay sixty">
  <div id="scientist-index" class="small-wrapper">

    <% @scientists.each do |s| %>
      <div class="image_div">
        <% if s.photo.nil? %>
          <img class="thumb" src="http://res.cloudinary.com/dh6k0tlkb/image/upload/v1516666413/a6m6rvl33zc1czjar6gm.jpg" />
        <% end %>
        <%= link_to image_tag(s.photo, :class => 'thumb', :secure => true ), s unless s.photo.nil? %>
      <p><%= link_to s.name, s %></p>
      </div>


    <% end %>


  </div>

</div>

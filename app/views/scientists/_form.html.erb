<%= form_for @scientist, :html => { :multipart => true } do |f| %>



  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control', :required => true   %>
  </div>

  <div class="form-group">
    <%= f.label :born %>
    <%= f.text_field :born, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :died %>
    <%= f.text_field :died, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.text_field :photo, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <label></label>
    <%= f.submit :class => 'btn btn-info'  %>
  </div>




<% end %>

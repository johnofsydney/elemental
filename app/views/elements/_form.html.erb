<%= form_for @element, :html => { :multipart => true } do |f| %>



  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control', :required => true   %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :protons %>
    <%= f.text_field :protons, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :electrons %>
    <%= f.text_field :electrons, :class => 'form-control'   %>
  </div>

  <div class="form-group">
    <%= f.label :described_date %>
    <%= f.text_field :described_date, :class => 'form-control'   %>
  </div>


  The following scientists discovered and / or described <%= @element.name %>
  <ul>
  <% @element.scientists.each do |scientist| %>
  <% p = "/elements/#{@element.id}/remove/#{scientist.id}" %>

    <li><%= link_to scientist.name, scientist %>, <%= link_to 'Remove Scientist', p, :method => 'delete', :data => { :confirm => 'Are you sure?'} %></li>
  <% end %>
  </ul>



  <h3>Add Scientist</h3>
  <%= render 'scientist' %>





  <div class="form-group">
    <label></label>
    <%= f.submit :class => 'btn btn-info'  %>
  </div>




<% end %>

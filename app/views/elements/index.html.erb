<h1>Elements</h1>

<% @elements.each do |e| %>

  <%= content_tag :div, class: "box row-" + e.position.split(',')[0] + " col-"  + e.position.split(',')[1] + " " + e.family do %>
    <%= e.symbol %>
    <%= link_to e.name, e %>
  <% end %>


<% end %>










